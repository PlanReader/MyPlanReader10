const handleShare = async (jobName, totalEstimate) => {
  const shareText = `Estimate for ${jobName}: Total ${totalEstimate}. Generated by PlanReader.`;
  
  if (navigator.share) {
    // Mobile native share
    await navigator.share({
      title: 'PlanReader Estimate',
      text: shareText,
      url: window.location.href,
    });
  } else {
    // Desktop clipboard copy
    await navigator.clipboard.writeText(shareText);
    alert('Estimate summary copied to clipboard!');
  }
};
